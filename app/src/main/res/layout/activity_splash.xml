<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/project_black"
    tools:context=".ui.splash.SplashActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/topImage"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginStart="-200dp"
        android:layout_marginTop="-200dp"
        android:background="@drawable/bg_round2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bottomImage"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_marginEnd="-350dp"
        android:layout_marginBottom="-200dp"
        android:background="@drawable/bg_round2"
        android:backgroundTint="@color/light_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/mLogo"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:textColor="@color/blue_color"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/bottomImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topImage"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/logo1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/niceTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:text="Let's grow together"
        android:textColor="@color/light_white"
        android:textSize="@dimen/_17ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mLogo" />





</androidx.constraintlayout.widget.ConstraintLayout>